.container{
  background: #f8f8f8;
  padding-bottom:24rpx;
}
.content-box{
  background: #fff;
  width: 702rpx;
  box-sizing: border-box;
  margin-top: 24rpx;
  padding:25rpx;
}
.imei{
  color:#ccc;
}
.report image{
  width: 20rpx;
  height:24rpx;
  position:relative;
  top:3rpx;
}
.difference{
  color:#fc4747
}
.status{
  color:#333333;
  font-size: 36rpx;
  line-height: 56rpx;
  margin:14rpx auto;
}
.status image{
  width: 14rpx;
  height:26rpx;
  position:relative;
  top:3rpx;
  margin-left:15rpx;
}
.title{
  padding-bottom: 20rpx;
  font-weight: 600;
  border-bottom: 1px solid #f8f8f8;
  font-size: 30rpx;
  color:#333;
  margin-bottom: 18rpx;
}
.detail{
  color:#666;
  font-size: 28rpx;
  line-height: 56rpx;
}
.order-detail{
  font-size: 22rpx;
	line-height: 36rpx;
	color: #cccccc;
}
.order-no{
  display: flex;
}
.order-no button{
  height: 40rpx;
  color:#999;
  font-size: 24rpx;
  line-height: 40rpx;
  background: #fff;
  margin-right: 0
}
/* 订单跟踪  */
.orderTrackBg {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
.orderTrack {
  height: 674rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
}
.trackTitle{
  height: 80rpx;
	font-size: 30rpx;
	line-height: 80rpx;
	color: #333333;
  text-align: center;
  border-bottom:1px solid #f8f8f8;
}
.track-item{
	display:flex;
  padding:0 50rpx;
  justify-content: space-between
}
.track-item view{
	font-size: 26rpx;
	line-height: 80rpx;
	color: #666666;
}
.hide-modal{
  height:88rpx;
  line-height: 88rpx;
  background:#fc4747;
  position: fixed;
  bottom: 0;
  width: 100%;
  text-align: center;
  color:#fff;
  font-size: 30rpx;
}
.track-item .current{
  color:#fc4747;
}
.spot{
  display: inline-block;
  width: 12rpx;
	height: 12rpx;
  border-radius: 6rpx;
	background-color: #dddddd;
  position:relative;
  top:-3rpx;
  margin-right:12rpx;
}
.currentSpot{
  display: inline-block;
  width:16rpx;
  height:16rpx;
  border-radius:8rpx;
	background-color: #fc4747;
  position:relative;
  top:-1rpx;
  margin-right:10rpx;
}
page{
  background:#f8f8f8
}
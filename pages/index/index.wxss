.bg-common{
  width: 218rpx;
	height: 240rpx;
	background-blend-mode: normal,	normal;
	border-radius: 10px;
	opacity: 0.8;
  padding:56rpx 0 40rpx 0;
  color:#fff;
  text-align: center;
  box-sizing: border-box;
  font-size: 28rpx;
}
.bg-blue {
	background-image: linear-gradient(-50deg, 
		rgba(55, 127, 254, 1) 0%, 
		rgba(100, 186, 255, 1) 100%), 
	linear-gradient(
		rgba(0, 0, 0, 1), 
		rgba(0, 0, 0, 1));
	box-shadow: 0rpx 5rpx 20rpx 0rpx 
		rgba(30, 73, 149, 0.24);
}
.bg-yellow {
	background-image: linear-gradient(-50deg, 
		rgba(255, 175, 31, 1) 0%, 
		rgba(254, 203, 29, 1) 100%), 
	linear-gradient(
		rgba(0, 0, 0, 1), 
		rgba(0, 0, 0, 1));
	box-shadow: 0px 5px 20px 0px 
		rgba(180, 139, 6, 0.24);
}
.bg-red {
	background-image: linear-gradient(-50deg, 
		rgba(252, 70, 70, 1) 0%, 
		rgba(254, 129, 129, 1) 100%), 
	linear-gradient(
		rgba(0, 0, 0, 1), 
		rgba(0, 0, 0, 1));
	box-shadow: 0px 5px 20px 0px 
		rgba(147, 39, 39, 0.24);
}
.bg-blue image{
  width:74rpx;
  height:82rpx;
  margin-bottom:23rpx;
}
.bg-yellow image{
  width:70rpx;
  height:84rpx;
  margin-bottom:21rpx;
}
.bg-red image{
  width:72rpx;
  height:76rpx;
  margin-bottom:30rpx;
}
/* 订单  */
.order-data{
  width:100%;
  box-sizing: border-box;
  padding: 30rpx 24rpx 24rpx 24rpx;
  background: #f8f8f8;
}
.order-header{
  text-align: left;
  margin-bottom: 34rpx;
}
.order-title{
  font-size: 36rpx;
  font-weight: 500;
  color:#333;
}
.order-question{
  width: 32rpx;
  height:32rpx;
  margin-left:12rpx;
  vertical-align: middle;
}
/* 表格  */
.table {
  border: 0px solid darkgray;
  background:#fff;
}
.t-header{
  border-bottom:1px solid #f8f8f8;
  height:66rpx;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}
.td {
    width:21%;
    color:#999;
    font-size: 26rpx;
    height: 77rpx;
    line-height: 77rpx;
    justify-content: center;
    text-align: center;
}
.th {
  width: 21%;
  font-size: 24rpx;
  height: 70rpx;
  line-height: 70rpx;
  justify-content: center;
  color: #666;
  display: flex;
  align-items: center;
}
.width-less{width:16%;}
.border-r{
  border-right:1px solid #f8f8f8;
}
/*模态框*/
.wxapp-modal{
  position: fixed;   /* 使用绝对定位或固定定位  */
  left: 0px;    
  top: 0px;
  width:100%;
  height:100%;
  text-align:center;
  z-index: 1000;
  background: rgba(0,0,0,0.5); 
}
.wxapp-modal .body{
    width: 540rpx;
    margin:400rpx auto;
    background-color: #fff;
    border-radius: 8rpx;
    text-align:center;
    position:relative;
}
.wxapp-modal .content{
  text-align: left;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #888;
  padding:20rpx;
}
.wxapp-modal .yes{
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
	color: #2c7de8;
  border-top:1px solid #eee;
}